{
  "name": "0jimbox",
  "image": "0jimbox",

  // Pass the Docker-format secrets file directly + use host networking for corporate firewall
  "runArgs": [
    "--env-file", "${localEnv:HOME}/.secrets/dotfiles_docker.env",
    "--network=host"
  ],

  // Extract secrets after dotfiles installation
  "postAttachCommand": "~/.config/dotfiles/scripts/secrets.sh open",

  "features": {
    "./features/fix-zsh": {
      "settingsTemplate": "/workspace/.devcontainer/roo/roo-settings.json",
      "outputPath": "/tmp/roo-settings.json"
    }
  }
}
